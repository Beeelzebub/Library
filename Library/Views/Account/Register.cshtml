@model Library.ViewModels.RegisterViewModel

<h2>Регистрация нового пользователя</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" asp-controller="Account" asp-action="Register">
            <h4>Личные данные</h4>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="form-group col-6">
                    <input asp-for="FirstName" class="form-control" placeholder="Имя" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <input asp-for="SecondName" class="form-control" placeholder="Фамилия" />
                    <span asp-validation-for="SecondName" class="text-danger"></span>
                </div>
            </div>
           
            <div class="row">
                <div class="form-group col-6">
                    <input asp-for="Phone" class="form-control" placeholder="Телефон" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <input asp-for="City" class="form-control" placeholder="Город" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <input asp-for="Street" class="form-control" placeholder="Улица" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <input asp-for="Hous" class="form-control" placeholder="Дом" />
                    <span asp-validation-for="Hous" class="text-danger"></span>
                </div>
            </div>
            <h4>Данные для входа</h4>
            <div class="row justify-content-center">
                <div class="col-6">
                    <div class="form-group">
                        <input asp-for="UserName" class="form-control" placeholder="Логин" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-5">
                        <input asp-for="PasswordConfirm" class="form-control" placeholder="Подтвердите пароль" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div>
                <input type="submit" value="Регистрация" class="btn" />
            </div>
        </form>
    </div>
</div>

